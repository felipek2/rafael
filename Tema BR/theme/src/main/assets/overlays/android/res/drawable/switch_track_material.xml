<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true">
            <gradient android:angle="0.0" android:endColor="#00008ec2"
                android:startColor="#00008ec2" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="0.8dp" android:color="?android:attr/colorControlActivated" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false"
            android:visible="true">
            <gradient android:angle="0.0" android:endColor="#00151515"
                android:startColor="#00151515" />
            <corners android:radius="25.0dip" />
            <size android:width="22.0dip" android:height="22.0dip" />
            <stroke android:width="0.8dp" android:color="?android:attr/colorControlNormal" />
        </shape>
    </item>
</selector>