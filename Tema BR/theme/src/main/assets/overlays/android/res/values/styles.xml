<?xml version="1.0" encoding="utf-8"?>


<resources>

    <!-- aplicado ao estilo darck -->
    <style name="Theme.Material" parent="@*android:style/Theme.Material">
        <item name="android:statusBarColor">?*android:colorPrimaryDark</item>
        <item name="android:navigationBarColor">?*android:colorPrimary</item>

        <item name="android:colorAccent">@*common:color/accent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <!-- aplicado ao estilo light -->
    <style name="Theme.Material.Light" parent="@*android:style/Theme.Material.Light">
        <!-- estes dois itens é quem colore a barra de navegação da cor da barra de status -->
        <item name="android:statusBarColor">?*android:colorPrimaryDark</item>
        <item name="android:navigationBarColor">?*android:colorPrimaryDark</item>

        <item name="android:colorAccent">@*common:color/accent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>


    <!-- define o estilo das configurações -->
    <style name="Theme.Material.Settings" parent="@*android:style/Theme.Material.Settings">
        <item name="android:colorPrimary">@*common:color/primary</item>
        <item name="android:colorPrimaryDark">@*common:color/primaryDark</item>
        <item name="android:colorAccent">@*common:color/accent</item>

        <item name="android:colorControlActivated">@*common:color/accent</item>
    </style>

    <!-- titulo da notificação -->
    <style name="TextAppearance.Material.Notification.Title"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">@*common:color/accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Animações-->
    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="Theme.DeviceDefault" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <style name="Theme.DeviceDefault.Light" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>


</resources>
